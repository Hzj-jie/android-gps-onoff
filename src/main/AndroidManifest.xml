<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.gemini.gps_onoff"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-sdk android:minSdkVersion="8" />
    <uses-permission android:name="android.permission.WRITE_SECURE_SETTINGS"
                     xmlns:tools="http://schemas.android.com/tools"
                     tools:ignore="ProtectedPermissions" />
    <application android:icon="@drawable/blank">
        <activity android:name=".GpsOnActivity"
            android:theme="@android:style/Theme.NoDisplay"
            android:label="Gps On"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name=".GpsOnActivity" />
                <action android:name="android.intent.action.MAIN" /> 
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".GpsOffActivity"
            android:theme="@android:style/Theme.NoDisplay"
            android:label="Gps Off"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name=".GpsOffActivity" />
                <action android:name="android.intent.action.MAIN" /> 
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>
